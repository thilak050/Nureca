<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:background="@color/gold"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:paddingLeft="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/dateandstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="@tools:sample/full_names"
                android:textSize="12dp"
                android:textStyle="bold"
                android:paddingStart="8dp" />
            <View
                android:background="#E8E8E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Positive Case"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:paddingStart="8dp" />
                    <TextView
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#FF5722"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/tv_positivecase"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:paddingStart="8dp" />

                </LinearLayout>

                <View
                    android:background="#E8E8E6"
                    android:layout_width="0.5dp"
                    android:layout_height="55dp"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Hospitalized"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:paddingStart="8dp" />
                    <TextView
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#FFC107"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/tv_hospitalized"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:paddingStart="8dp" />

                </LinearLayout>

            </LinearLayout>


            <View
                android:background="#E8E8E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Recovered"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:paddingStart="8dp" />
                    <TextView
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#4CAF50"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                       android:id="@+id/tv_recovered"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:paddingStart="8dp" />

                </LinearLayout>

                <View
                    android:background="#E8E8E6"
                    android:layout_width="0.5dp"
                    android:layout_height="55dp"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="DeathConfirmed"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:paddingStart="8dp" />
                    <TextView
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#009688"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/tv_deathconfirmed"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:paddingStart="8dp" />

                </LinearLayout>

            </LinearLayout>
            <View
                android:background="#E8E8E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/tv_viewdetails"
                android:paddingRight="5dp"
                android:padding="10dp"
                android:background="@color/white"
                android:text="View Details >>"
                android:textStyle="bold"
                android:textSize="14dp"
                android:gravity="center|right"
                android:fontFamily="sans-serif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>